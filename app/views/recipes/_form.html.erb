
<%= render 'shared/errors', obj: @recipe %>

<div class="row" id="new_recipe_form">
  <div class="well col-md-8 col-md-offset-2">
    
    <%= form_for(@recipe, html: { multipart: true }) do |f| %>
    
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <br>
      
      <%= f.label :summary %>
      <%= f.text_field :summary %>
      
      <br>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>
      
      <br>
      
      <span class="picture">
        <%= f.label :picture %>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,image/bmp' %>
      </span>
      
      <br>
      
      <%= f.submit( @recipe.new_record? ? 'Create Recipe' : 'Edit Recipe', class: "btn btn-success" ) %>
    
    <% end %>
    
  </div>
</div>

<script type="text/javascript">
  
  $('#recipe_picture').bind('change', function() {
    size_in_megabytes = this.files.[0].size/1024/1024;
    if(size_in_megabytes >= 5)
    {
      alert("The file that you have selected is to large, the maximum file size if 5MB, please upload a different file.");
    }
  });
  
</script>